import Heritage.Heritage;

public class Pegasus extends Horse
{
        public Pegasus (String name)
        {
            super();
            this.mPosZ = 100;
        }
    
        public void move(int x, int Y)
        {
            super.move(x, y);
            System.out.println("Le pegase se déplace(X="+this.mPoX+",Y="+this.mPosY+")");
        }
            
        public void fly(int z)
        {
            this.mPosZ = z;
            System.out.println("Le pegase s'éléve dans les airs(z="+ this.mPosZ+")");
        }
        
        private int mPosZ;

}